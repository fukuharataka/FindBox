.top_box {
  position: relative;
  background-color: rgba(255,255,255,1);
  background-image: url(<%= asset_path("top.jpg") %>);
  background-size: cover;
}

.top_band {
  background-color: rgba(255, 255, 255, 0);
  position: absolute;
  bottom: 50vh;
  width: 100%;
  height: 20vh;
  padding: 0;
  margin: 0;
  display: inline;
}

.logo_container {
  float: left;
  height: 100%;
  width:30%;
  box-sizing: border-box;
  img {
    width: 100%;
  }
}

.band_text_container {
  float: right;
  height: 100%;
  width: 60%;
  box-sizing: border-box;
}


.top_text {
  display: inline-block;
  width: 15%;
  font-size: 25px;
  margin: 50px 25px 0 0;
  float: right;
  color: rgb(250, 175, 0);
}
