.top_box {
  position: relative;
  background-color: rgba(255,255,255,1)
}

.top_band {
  background-color: rgba(255, 255, 255, 0);
  position: absolute;
  bottom: 50vh;
  width: 100%;
  height: 20vh;
  padding: 0;
  margin: 0;
  display: inline;
}

.logo_container {
  float: left;
  background-color: rgba(0, 100, 100, 1);
  height: 100%;
  width:30%;
  box-sizing: border-box;
}

.band_text_container {
  float: right;
  height: 100%;
  width: 60%;
  box-sizing: border-box;
}


.top_text {
  display: inline-block;
  width: 15%;
  font-size: 25px;
  margin-left: 5%;
}
