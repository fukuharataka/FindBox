<div class="full_screen_container b">
  <div class="edit_container center">
    <div class="error_container_house">
      <%= render 'layouts/error_messages', instance: @live_house %>
    </div>
    <div class="edit_box imgInput ">
      <div class="image_box">
        <% if @photo.nil? %>
          <%= image_tag "no_image.png", size: '200x200', class: "imgView" %>
        <% else %>
          <%= image_tag @photo.image_url, size: '200x200', class: "imgView" %>
        <% end %>
        <input type="file" name="file1">
      </div>
      <div class="edit_aria">
        <div class="form_title_box clearfix center">
          <label for='name'>基本情報</label>
        </div>
        <%= form_for(@live_house, url: update_basic_path(@live_house)) do |f| %>
          <%= f.hidden_field :image_id, id: "img_id" %>
          <div class="form-box clearfix">
            <%= f.text_field :name, class: "right form form-input", placeholder: 'ライブハウス名' %>
            <label class="right">名前<span class='form-req'>必須</span></label>
          </div>
          <div class="form-box clearfix">
            <%= f.number_field :capacity, class: "right form form-input", placeholder:"10000" %>
            <label class="right">収容人数<span class='form-req'>必須</span></label>
          </div>
          <div class="form-box clearfix">
            <%= f.text_field :prefecture, class: "right form form-input", placeholder:"東京都" %>
            <label class="right">都道府県<span class='form-req'>必須</span></label>
          </div>
          <div class="form-box clearfix">
            <label for='name'>以降の住所</label>
            <%= f.text_field :address, class: "form form-input", placeholder:"〇〇区〇〇町1丁目1-1" %>
          </div>
          <div class="form-box clearfix">
            <label for='name'>HPのURL</label>
            <%= f.text_field :hp_url, class: "form form-input", placeholder:"www.LiveHouse.com" %>
          </div>
          <div class="form-box clearfix">
            <label for='name'>電話番号</label>
            <%= f.text_field :phone_number, class: "form form-input", placeholder:"09000000000" %>
          </div>
          <div class="form-box clearfix">
            <%= f.submit "登録する", class: "btn b"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
