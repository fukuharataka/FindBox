<div class="full_screen_container b">
  <%= render 'layouts/user_header' %>
  <div class="edit_container b">
    <div class="edit_box b">
      <div class="image_box b">
        <%= image_tag "no_image.png", size: '200x200' %>
        <input class="" type="file" name="" value="">
      </div>
      <div class="edit_aria b">
        <div class="form-box clearfix center">
          <label for='name'>ライブハウス新規登録</label>
        </div>
        <%= form_for(@live_house, url: live_houses_path(@user)) do |f| %>
        <div class="form-box clearfix">
          <label for='name'><span class='form-req'>必須</span>名前</label>
          <%= f.text_field :name, class: "form form-input", placeholder: 'ライブハウス名' %>
        </div>
        <div class="form-box clearfix">
          <label for='name'><span class='form-req'>必須</span>収容人数</label>
          <%= f.number_field :capacity, class: "form form-input", placeholder:"〇〇人" %>
        </div>
        <div class="form-box clearfix">
          <label for='name'><span class='form-req'>必須</span>都道府県</label>
          <%= f.text_field :prefecture, class: "form form-input", placeholder:"東京都" %>
        </div>
        <div class="form-box clearfix">
          <label for='name'>以降の住所</label>
          <%= f.text_field :address, class: "form form-input", placeholder:"〇〇区〇〇町1丁目1-1" %>
        </div>
        <div class="form-box clearfix">
          <label for='name'>HPのURL</label>
          <%= f.text_field :hp_url, class: "form form-input", placeholder:"www.LiveHouse.com" %>
        </div>
        <div class="form-box clearfix">
          <label for='name'>電話番号</label>
          <%= f.text_field :phone_number, class: "form form-input", placeholder:"09000000000" %>
        </div>
        <div class="form-box clearfix">
          <%= f.submit "登録する", class: "btn"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
